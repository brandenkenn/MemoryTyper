{
  "name": "memory-typer",
  "version": "0.1.0",
  "description": "Practice memorization, recall, and touch typing at the same time",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonasninja/MemoryTyper.git"
  },
  "keywords": [
    "typing",
    "memorization",
    "touch typing",
    "memorize"
  ],
  "author": "Ivan Jonas <ivan@jonas.ninja> (http://jonas.ninja)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/jonasninja/MemoryTyper/issues"
  },
  "homepage": "https://github.com/jonasninja/MemoryTyper#readme",
  "devDependencies": {
    "faucet": "0.0.1",
    "tape": "^4.2.1",
    "watchify": "^3.4.0"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "tape test/**/*.js | faucet",
    "build": "browserify src/js/main.js -o src/js/bundle.js",
    "watch": "watchify src/js/main.js -o src/js/bundle.js --debug --verbose"
  },
  "standard": {
    "ignore": [
      "/src/vendor/"
    ],
    "globals": [
      "jQuery",
      "$"
    ]
  }
}
